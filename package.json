{
  "name": "json-schema-to-joi",
  "version": "1.1.0",
  "description": "Converts JSON schema to Joi typescript code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "json2joi": "dist/cli.js"
  },
  "author": "Marshall Ma",
  "license": "MIT",
  "scripts": {
    "format": "tsfmt -r",
    "clean": "rm -rf dist build",
    "compile": "yarn clean && yarn format && yarn lint --short && tsc",
    "build": "yarn test && yarn _copylib",
    "test": "scripty",
    "lint": "scripty",
    "_copylib": "mkdir -p dist && cp -R build/src/* dist/",
    "npm_publish": "scripty",
    "prepare": "yarn build",
    "doc": "typedoc && touch docs/.nojekyll"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "@types/chai": "^4.1.7",
    "@types/cli-color": "0.3.29",
    "@types/hapi__joi": "16.0.1",
    "@types/json-schema": "^7.0.1",
    "@types/lodash": "^4.14.120",
    "@types/minimist": "1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/mz": "0.0.32",
    "@types/node": "^10.12.18",
    "chai": "^4.2.0",
    "json-diff": "^0.5.3",
    "mocha": "^5.2.0",
    "scripty": "^1.9.0",
    "source-map-support": "^0.5.10",
    "tsc-watch": "4.0.0",
    "tslint": "^5.12.1",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-sonarts": "^1.9.0",
    "tslint-strict-error-throw": "^1.0.1",
    "typedoc": "0.15.0",
    "typescript": "^3.2.4",
    "typescript-formatter": "^7.2.2"
  },
  "dependencies": {
    "@hapi/joi": "16.1.7",
    "bunyan": "1.8.12",
    "cli-color": "1.4.0",
    "lodash": "^4.17.11",
    "minimist": "1.2.0",
    "mz": "2.7.0",
    "stdin": "0.0.1"
  }
}

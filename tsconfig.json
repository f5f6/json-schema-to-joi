{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "newLine": "LF",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "removeComments": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2017"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
    "theme": "default",
    "exclude": [ 
      "test/**/*.ts",
      "src/cli.ts",
      "src/**/index.ts"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
